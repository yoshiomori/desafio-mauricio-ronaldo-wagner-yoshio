void leia_entrada(FILE *file, int larg, int alt, int L, int H, int T, int v, int Niter, int s;){
  char linha[100];
  float eps, P;
  if (argc != 2){
    printf ("USO: ondas <nome do arquivo>\n");
    exit(EXIT_FAILURE);
  }
  file = fopen(argv[1], "r");
  if(!file){
    perror("Arquivo de entrada");
    exit(EXIT_FAILURE);
  }
  fscanf(file, "%s", linha);
  larg = atoi(strtok(linha, "(,)"));
  alt = atoi(strtok('\0', "(,)"));
  fscanf(file, "%s", linha);
  L = atoi(strtok(linha, "(,)"));
  H = atoi(strtok('\0', "(,)"));
  fscanf(file, "%s", linha);
  T = atoi(linha);
  fscanf(file, "%s", linha);
  v = atoi(linha);
  fscanf(file, "%s", linha);
  eps = atof(linha);
  fscanf(file, "%s", linha);
  Niter = atoi(linha);
  fscanf(file, "%s", linha);
  P = atof(linha);
  fscanf(file, "%s", linha);
  s = atoi(linha);
}
